#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=4
# This has to be exported to make some magic below work.
export DH_OPTIONS

# These are used for cross-compiling and for saving the configure script
# from having to guess our platform (since we know it already)
DEB_HOST_GNU_TYPE   ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif
ifeq (,$(findstring nostrip,$(DEB_BUILD_OPTIONS)))
	INSTALL_PROGRAM += -s
endif

include /usr/share/dpatch/dpatch.make

configure: configure-stamp
configure-stamp: patch-stamp
	dh_testdir
	./configure --prefix=/usr/lib \
		    --sysconfdir=/etc \
                    --sharedstatedir=/var \
		    --enable-socket \
	            --with-postgres --with-blas --with-lapack --with-x \
		    --with-freetype --with-readline --with-nls --with-dbm \
	            --without-glw --without-odbc \
		    --with-glw-includes=/usr/include \
                    --with-freetype-includes=/usr/include/freetype2 \
		    --with-tcltk-includes=/usr/include/tcl8.4 \
                    --with-postgres-includes=/usr/include/postgresql \
	            --with-blas-libs=/usr/lib/atlas \
	            --with-lapack-libs=/usr/lib/atlas
	touch configure-stamp

build: configure-stamp build-arch build-indep

#
#Architecture
#
build-arch: build-arch-stamp
build-arch-stamp: build-indep-stamp
	dh_testdir
	$(MAKE)
	touch build-stamp

#
#Binary independent
#
build-indep: build-indep-stamp
build-indep-stamp:  config.status
	dh_testdir
	chmod 755 debian/fixpaths.sh debian/manmangle.sh debian/fixscripts.sh

clean: true-clean unpatch 
true-clean:
	dh_testdir
	dh_testroot

	rm -f build-arch-stamp build-indep-stamp configure-stamp
	rm -f *-stamp build.log
	find . -name "*~" | xargs rm -fr

	-$(MAKE) distclean

	-test -r /usr/share/misc/config.sub && \
		cp -f /usr/share/misc/config.sub config.sub
	-test -r /usr/share/misc/config.guess && \
		cp -f /usr/share/misc/config.guess config.guess
	
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_clean -k -A

# install grass core
	$(MAKE) install INST_DIR=$(CURDIR)/debian/tmp/usr/lib/grass5 \
          PREFIX=$(CURDIR)/debian/tmp/usr/lib/grass5 \
          BINDIR=$(CURDIR)/debian/tmp/usr/bin

# fix all the braindead scripts
	debian/fixscripts.sh

# blast preinstalled locks
	rm -fr $(CURDIR)/debian/tmp/usr/lib/grass5/locks/*

# atomize CVS directories left by upstream packages (bleurgh!)
	find $(CURDIR)/debian/tmp -name "CVS" | xargs rm -fr

# move bwidget stuff around
	rm -f $(CURDIR)/debian/tmp/usr/lib/grass5/bwidget/LICENSE.txt
	rm -f $(CURDIR)/debian/tmp/usr/lib/grass5/bwidget/LGPL.txt
	install -d $(CURDIR)/debian/tmp/usr/share/doc/grass/bwidget
	mv $(CURDIR)/debian/tmp/usr/lib/grass5/bwidget/BWman \
	  $(CURDIR)/debian/tmp/usr/share/doc/grass/bwidget/html
	for x in README.grass CHANGES.txt demo ; do \
	     mv $(CURDIR)/debian/tmp/usr/lib/grass5/bwidget/$$x    \
	       $(CURDIR)/debian/tmp/usr/share/doc/grass/bwidget/ ; \
	done

# fix links
	debian/fixpaths.sh $(CURDIR)/debian/tmp debian/tmp

# install the manpages
#	rm -fr $(CURDIR)/debian/tmp/usr/share/man
#	debian/manmangle.sh $(CURDIR)/debian/tmp/usr/share/man
#	find $(CURDIR)/debian/tmp/usr/share/man -type f | xargs gzip -9

# some permissions
	chmod 755 $(CURDIR)/debian/tmp/usr/lib/grass5/etc/help/17.manual/Help.pages/curcsh40

# build and install nviz
#	cd src.contrib/GMSL/NVIZ2.2 && sh dbuild.sh
# build and install grid3d
#	cd src.contrib/GMSL/g3d && sh dbuild.sh
# build and install postgres support
#	cd src.garden/grass.postgresql && sh dbuild.sh

# finally removes unwanted gmakelinks
	rm -f  $(CURDIR)/debian/tmp/usr/bin/gmakelinks5

# move html and other documents around in doc package
	install -d $(CURDIR)/debian/grass-doc/usr/share/doc/grass-doc
	mv $(CURDIR)/debian/tmp/usr/lib/grass5/documents \
	   $(CURDIR)/debian/grass-doc/usr/share/doc/grass-doc/html
	find $(CURDIR)/debian/grass-doc/usr/share/doc/grass-doc/nviz \
	  -name "OBJ.*" | xargs rm -f
	dh_movefiles -p grass usr

# Must not depend on anything. This is to be called by
# binary-arch/binary-multi
# in another 'make' thread.
binary-common:
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installexamples
	dh_installmenu
	dh_installcron
	dh_installinfo
	dh_installchangelogs ChangeLog
	dh_link
	dh_strip
	dh_compress 
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture independant packages using the common target.
binary-indep: build-indep install
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

# Build architecture dependant packages using the common target.
binary-arch: build-arch install
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

binary: binary-arch binary-indep
.PHONY: build clean binary-indep binary-arch binary install patch unpatch configure true-clean
